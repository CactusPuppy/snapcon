- cache [conference, venue, '#splash#header'] do
  #banner{ style: ("background-image: url(#{conference.splashpage.banner_photo_file_name})" if conference.splashpage.banner_photo_file_name) }
    .container
      .row
        .col-md-6.col-md-offset-3{ id: (conference.splashpage.banner_photo_file_name? ? "header-image" : "header-no-image") }
          .row
            -#
              - if conference.splashpage.banner_photo_file_name?
                .col-md-4
                  = image_tag(conference.splashpage.banner_photo_file_name,
                    class: 'img-responsive img-center',
                    id: 'splash-logo')
            .col-md-8
              %h1
                = conference.title.html_safe
              %h3
                - if conference.start_date && conference.end_date
                  %span.date.text-nowrap
                    = date_string(conference.start_date, conference.end_date)
                - if conference.venue
                  %span.venue.text-nowrap
                    - if venue.website.present?
                      = sanitize link_to(venue.name, venue.website)
                    - else
                      = venue.city
                      - if venue.country != 'US'
                        &bull;
                        = venue.country_name
